{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(afrigter|ai|analyze-job-post|scrape-jobs|scrape-careerjunction|tasks)(/.*)?",
      "dest": "/api/disabled"
    },
    {
      "src": "/(afrigter|career-roadmap|resume-analyzer)(/.*)?",
      "dest": "/api/disabled"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}